---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore Trending AI Tools"
    url="/ai-tools-category"
  />

  <HeroSection
    title=`Discover Top <span class="text-yellow-500 dark:text-yellow-400">AI & Web Dev</span> SaaS Tools`
    subTitle="Your curated marketplace for the latest and greatest in AI and web development software."
    primaryBtn="Explore AI Tools"
    primaryBtnURL="/products"
    secondaryBtn="Explore Web Dev Tools"
    secondaryBtnURL="/products"
    src={`/images/placeholder-hero.avif`}
    alt="Abstract image representing AI and Web Development SaaS products"
  />

  <ClientsSection
    title="Featured SaaS Partners"
    subTitle="Powering innovation with leading AI and Web Development solutions."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Why Choose Our Marketplace?"
    subTitle="Curated selections, unbiased reviews, and exclusive deals to help you find the best AI and Web Development SaaS tools."
    src={`/images/placeholder-features.avif`}
    alt="Illustration of diverse SaaS application logos"
    features={features}
  />

  <FeaturesNavs
    title=`Explore <span class="text-yellow-500 dark:text-yellow-400">SaaS Categories</span> Tailored to Your Needs.`
    tabs={[
      {
        heading: "AI-Powered Solutions",
        content:
          "Boost productivity and unlock new capabilities with our range of AI-driven SaaS tools, from machine learning platforms to AI assistants.",
        svg: "brain",
        src: `/images/placeholder-ai-feature.avif`,
        alt: "Abstract representation of Artificial Intelligence",
        first: true,
      },
      {
        heading: "Web Development Environments",
        content:
          "Access powerful and intuitive SaaS platforms for all your web development needs, including IDEs, hosting, and CI/CD pipelines.",
        svg: "code",
        src: `/images/placeholder-webdev-feature.avif`,
        alt: "Collage of web development code snippets and dashboards",
        second: true,
      },
      {
        heading: "Productivity & Collaboration",
        content:
          "Streamline your workflows and enhance team collaboration with SaaS tools designed for project management, communication, and design.",
        svg: "groups",
        src: `/images/placeholder-productivity-feature.avif`,
        alt: "Team collaborating around a digital workspace",
      },
    ]}
  />

  <TestimonialsSection
    title="Voices from Our Community"
    subTitle="See how our curated SaaS selections are helping innovators and developers."
    testimonials={[
      {
        content:
          "This marketplace was a goldmine for finding the AI tools I needed for my startup. The curated lists saved me so much research time!",
        author: "Alex Chen",
        role: "Founder, InsightAI Corp.",
        avatarSrc: `/images/placeholder-avatar-1.avif`,
      },
      {
        content:
          "Finally, a place that brings together top web dev tools with honest reviews. Helped me choose the right stack for my new project.",
        author: "Maria Rodriguez",
        role: "Lead Developer, WebFlow Solutions",
        avatarSrc: `/images/placeholder-avatar-2.avif`,
      },
    ]}
    statistics={[
      { count: "500+", description: "AI & Web Dev tools listed" },
      { count: "10k+", description: "Community members actively discovering" },
      { count: "95%", description: "User satisfaction rate with curated tools" },
      { count: "24/7", description: "Access to the latest SaaS trends" },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Your Questions<br />Answered" faqs={faqs} />

  <HeroSectionAlt
    title="Ready to Find Your Next SaaS Solution?"
    subTitle="Explore our curated lists of AI and Web Development tools, read expert reviews, and join our community of innovators."
    url="/products"
  />
</MainLayout>
